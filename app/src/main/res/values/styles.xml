<resources>

    <style name="Widget.SkySphere.AppWidget.Container" parent="android:Widget">
        <item name="android:drawable">@drawable/gradient_background</item>
    </style>

    <style name="Widget.SkySphere.AppWidget.InnerView" parent="android:Widget">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- card. -->
    <style name="material_card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:clickable">true</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/card_white</item>
        <item name="android:foreground">@drawable/selectable_background_ripple</item>
    </style>

</resources>