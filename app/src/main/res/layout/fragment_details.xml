<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/card_white">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fragment_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="28dp"
            tools:context=".ui.details.DetailsFragment">

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:autoSizeMaxTextSize="24sp"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/fira_sans_medium"
                android:maxWidth="270sp"
                android:maxHeight="50sp"
                android:text="Auckland CBD"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/tempCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="20dp"
                android:padding="10dp"
                app:cardBackgroundColor="@color/background_white"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvLocation">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <ImageView
                        android:id="@+id/ivWeatherIcon"
                        android:layout_width="140dp"
                        android:layout_height="110dp"
                        android:src="@drawable/ic_cloudy"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/tvTemperature"/>

                    <TextView
                        android:id="@+id/tvTemperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11"
                        android:textColor="@color/black"
                        android:textSize="90sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvTemperatureUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="째C"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/tvTemperature"
                        app:layout_constraintTop_toTopOf="@id/tvTemperature"
                        android:layout_marginTop="20dp"/>

                    <TextView
                        android:id="@+id/tvTempHigh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12째"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        app:layout_constraintStart_toStartOf="@id/tvTemperature"
                        app:layout_constraintTop_toBottomOf="@id/tvTemperature" />

                    <TextView
                        android:id="@+id/tvTempDivider"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="/"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/tvTempHigh"
                        app:layout_constraintTop_toBottomOf="@id/tvTemperature" />

                    <TextView
                        android:id="@+id/tempLow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="9째"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        app:layout_constraintStart_toEndOf="@id/tvTempDivider"
                        app:layout_constraintTop_toBottomOf="@id/tvTemperature" />

                    <TextView
                        android:id="@+id/tvFeelsLikeTemperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Feels like 11째"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        app:layout_constraintStart_toStartOf="@id/tvTemperature"
                        app:layout_constraintTop_toBottomOf="@id/tvTempHigh" />


                    <TextView
                        android:id="@+id/tvWeatherState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cloudy"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        app:layout_constraintStart_toStartOf="@id/ivWeatherIcon"
                        app:layout_constraintEnd_toEndOf="@id/ivWeatherIcon"
                        app:layout_constraintTop_toTopOf="@id/tvTempHigh"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/windCard"
                android:layout_width="0dp"
                android:layout_height="155dp"
                app:layout_constraintWidth_percent="0.43"
                app:cardBackgroundColor="@color/background_white"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tempCard"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <ImageView
                        android:id="@+id/wind_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/round_air_24"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WIND"
                    android:textColor="@color/grey"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/wind_icon"
                    android:layout_marginStart="8dp"/>

                    <ImageView
                        android:id="@+id/ivWindDirection"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:src="@drawable/northeast_arrow"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@id/wind_icon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:tint="@color/black" />

                    <TextView
                        android:id="@+id/tvWindSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="34 km/h"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ivWindDirection"
                        android:layout_marginTop="12dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/humidityCard"
                android:layout_width="0dp"
                android:layout_height="155dp"
                app:layout_constraintWidth_percent="0.43"
                app:cardBackgroundColor="@color/background_white"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tempCard"
                app:layout_constraintBottom_toBottomOf="@id/windCard"
                android:layout_marginEnd = "20dp"
                android:layout_marginTop="15dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <ImageView
                        android:id="@+id/ivHumidity"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/humidity"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/tvHumidityTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HUMIDITY"
                        android:textColor="@color/grey"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ivHumidity"
                        android:layout_marginStart="8dp"/>

                    <TextView
                        android:id="@+id/tvHumidity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="70%"
                        android:textColor="@color/black"
                        android:textSize="50sp"
                        app:layout_constraintTop_toBottomOf="@id/tvHumidityTitle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/uvCard"
                android:layout_width="0dp"
                android:layout_height="155dp"
                app:layout_constraintWidth_percent="0.43"
                app:cardBackgroundColor="@color/background_white"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/windCard"
                android:layout_marginStart = "20dp"
                android:layout_marginTop="15dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <ImageView
                        android:id="@+id/ivUV"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_sunny"
                        app:tint = "@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/tvUVTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UV INDEX"
                        android:textColor="@color/grey"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ivUV"
                        android:layout_marginStart="8dp"/>

                    <TextView
                        android:id="@+id/tvUV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Low"
                        android:textColor="@color/black"
                        android:textSize="35sp"
                        app:layout_constraintTop_toBottomOf="@id/tvUVTitle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/visCard"
                android:layout_width="0dp"
                android:layout_height="155dp"
                app:layout_constraintWidth_percent="0.43"
                app:cardBackgroundColor="@color/background_white"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/windCard"
                android:layout_marginEnd = "20dp"
                android:layout_marginTop="15dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <ImageView
                        android:id="@+id/ivVisibility"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/eye_icon"
                        app:tint = "@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/tvVisibilityTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VISIBILITY"
                        android:textColor="@color/grey"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ivVisibility"
                        android:layout_marginStart="8dp"/>

                    <TextView
                        android:id="@+id/tvVisibility"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="19.4km"
                        android:textColor="@color/black"
                        android:textSize="35sp"
                        app:layout_constraintTop_toBottomOf="@id/tvVisibilityTitle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/rainfallCard"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.15"
                app:cardBackgroundColor="@color/background_white"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="@id/windCard"
                app:layout_constraintEnd_toEndOf="@id/humidityCard"
                app:layout_constraintTop_toBottomOf="@id/uvCard"
                android:layout_marginTop="15dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingVertical="20dp"
                    android:paddingHorizontal="30dp">

                    <ImageView
                        android:id="@+id/ivRainfall"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_rainy"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/grey" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RAINFALL"
                        android:textColor="@color/grey"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ivRainfall"
                        android:layout_marginStart="8dp"/>

                    <TextView
                        android:id="@+id/tvRainfall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4mm"
                        android:textColor="@color/black"
                        android:textSize="30sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lightly drizzling"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="15dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/sunCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/background_white"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="@id/windCard"
                app:layout_constraintEnd_toEndOf="@id/humidityCard"
                app:layout_constraintTop_toBottomOf="@id/rainfallCard"
                android:layout_marginTop="15dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:paddingBottom="30dp">

                    <ImageView
                        android:id="@+id/ivDaylight"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/sun"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/grey" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DAYLIGHT"
                        android:textColor="@color/grey"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ivDaylight"
                        android:layout_marginStart="8dp"/>

                    <ImageView
                        android:id="@+id/ivSun"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/sun"
                        app:tint="@color/black"
                        app:layout_constraintTop_toBottomOf="@id/ivDaylight"
                        app:layout_constraintStart_toStartOf="@id/tvDaylight"
                        app:layout_constraintEnd_toEndOf="@id/tvDaylight"
                        android:layout_marginTop="20dp"/>

                    <TextView
                        android:id="@+id/tvDaylight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12 hrs 31 mins"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="@id/ivDaylight"
                        app:layout_constraintTop_toBottomOf="@id/ivSun"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:id="@+id/tvSunrise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rise:"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        app:layout_constraintTop_toTopOf="@id/ivSun"
                        app:layout_constraintStart_toEndOf="@id/tvDaylight"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="20dp"/>

                    <TextView
                        android:id="@+id/tvSunriseData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="06:49"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="@id/ivSun"
                        app:layout_constraintStart_toEndOf="@id/tvSunrise"
                        android:layout_marginStart="10dp"/>

                    <TextView
                        android:id="@+id/tvSunset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set:"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        app:layout_constraintTop_toBottomOf="@id/tvSunrise"
                        app:layout_constraintStart_toStartOf="@id/tvSunrise"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:id="@+id/tvSunsetData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="19:28"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="@id/tvSunset"
                        app:layout_constraintStart_toStartOf="@id/tvSunriseData"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>